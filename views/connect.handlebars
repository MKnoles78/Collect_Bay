<div id="connect-div">
  <div class="ui grid"  style="justify-content: space-evenly">
    <div class="three wide column">
      <div>
          <form class="ui form" id="new-connect-form">
            <div class="field">
              <label>Author</label>
              <input type="text" id="author">
                <div class="field">
                <label>Message</label>
                <textarea type="text" id="body"></textarea>
              </div>
            </div>
        <br>
        <button class="ui button" type="submit">Submit</button>
        </form> 
      </div>
    </div>
  <div class="twelve wide column">
         <table class="ui celled table">
          <thead>
              <tr>
              <th>Author</th>
              <th>Message</th>
              <th>Delete</th>
            </tr></thead>
              <tbody>
              {{#each connects}}
                <tr>
                  <td data-label="Author" id="connectAuthor">{{author}}</td>
                  <td data-label="Body" id="connectBody">{{body}}</td>
                  <td><button class="circular ui icon button delete-connect" data-id={{{id}}}><i class="icon trash"></i></button></td>
                </tr>
              {{/each}}
              </tbody>
          </table> 
  </div>

</div>
